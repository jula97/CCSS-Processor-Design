module Binary_To_7Segment 
  (
   input       clk,
   input [7:0] binaryNum,
   output      segmentA,
   output      segmentB,
   output      segmentC,
   output      segmentD,
   output      segmentE,
   output      segmentF,
   output      segmentG
   );
 
  reg [6:0] encode = 7'h00;
   
  always @(posedge clk)
    begin
      case (binaryNum[3:0])
        4'b0000 : encode <= 7'h7E;
        4'b0001 : encode <= 7'h30;
        4'b0010 : encode <= 7'h6D;
        4'b0011 : encode <= 7'h79;
        4'b0100 : encode <= 7'h33;          
        4'b0101 : encode <= 7'h5B;
        4'b0110 : encode <= 7'h5F;
        4'b0111 : encode <= 7'h70;
        4'b1000 : encode <= 7'h7F;
        4'b1001 : encode <= 7'h7B;
        4'b1010 : encode <= 7'h77;
        4'b1011 : encode <= 7'h1F;
        4'b1100 : encode <= 7'h4E;
        4'b1101 : encode <= 7'h3D;
        4'b1110 : encode <= 7'h4F;
        4'b1111 : encode <= 7'h47;
      endcase
    end
 
  assign segmentA = encode[6];
  assign segmentB = encode[5];
  assign segmentC = encode[4];
  assign segmentD = encode[3];
  assign segmentE = encode[2];
  assign segmentF = encode[1];
  assign segmentG = encode[0];
 
endmodule
